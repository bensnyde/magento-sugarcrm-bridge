<?xml version="1.0"?>
<config>
    <tabs>
        <bs translate="label">
            <label>BS SugarBridge</label>
            <sort_order>100</sort_order>
        </bs>
    </tabs>

    <sections>
        <bs translate="label">
            <label>SugarCRM</label>
            <tab>bs</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Options</label>
                <frontend_type>text</frontend_type>
                <sort_order>60</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Bridge</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <url translate="label">
                            <label>SugarCRM Base URL</label>
                            <comment>ex. crm.example.com</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </url>
                        <username translate="label">
                            <label>SugarCRM Username</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </username>
                        <password translate="label">
                            <label>SugarCRM Password</label>
                            <frontend_type>password</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </password>
                        <email translate="label">
                            <label>Backup Email</label>
                            <comment>Email in event of export failure.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </email>
                        <campaigns translate="label">
                            <label>SugarCRM Campaign</label>
                            <frontend_type>select</frontend_type>
                            <source_model>sugarbridge/campaigns</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </campaigns>
                    </fields>
                </general>
            </groups>
        </bs>
    </sections>
</config>
